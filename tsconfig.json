{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"allowJs": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"rootDir": "./src",
		"outDir": "./"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["*.backup"]
}
